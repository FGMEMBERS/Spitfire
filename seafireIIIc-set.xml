		</view>
		<view n="6">
			<config>
				<target-z-offset-m archive="y"
													 type="double">2.75</target-z-offset-m>
			</config>
		</view>
		<hud>
			<enable3d>false</enable3d>
		</hud>
		<flaps>
			<setting>0.00</setting>
			<setting>1.00</setting>
		</flaps>
		<cowl-flaps>
			<setting>0.00</setting>
