			<wheels type="double">1</wheels>
			<system>
				<engine-pump type="bool">true</engine-pump>
			</system>
		</hydraulic>
		<pneumatic>
			<lever type="double">0</lever>
			<lever type="double">0</lever>
			<lever type="double">0</lever>
