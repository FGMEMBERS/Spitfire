	<!-- ================ map keyboard ================ -->
	<input>
		<keyboard>
			<!--map keys for Boost Control Cutout -->
			<key n="2">
				<name>Ctrl-B</name>
				<desc>Toggle engine boost control cutout.</desc>
				<binding>
					<command>nasal</command>
					<script>
						spitfire.toggleCutout();
					</script>
				</binding>
			</key>
			<!--map keys for  starter -->
