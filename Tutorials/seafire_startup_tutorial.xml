<PropertyList>
	<name>Engine Start</name>
	<description>This tutorial teaches the Seafire IIIc engine start procedure</description>

	<init>
		<set>
			<property>/sim/current-view/view-number</property>
			<value>0</value>
		</set>
		<set>
			<property>/controls/gear/brake-parking</property>
			<value>1</value>
		</set>
		<set>
			<property>/controls/engines/engine[0]/throttle</property>
			<value>0.0</value>
		</set>
		<set>
			<property>/controls/engines/engine[0]/mixture</property>
			<value>1</value>
		</set>
		<set>
			<property>/controls/engines/engine[0]/mag-switch-left</property>
			<value>0</value>
		</set>
		<set>
			<property>/controls/engines/engine[0]/mag-switch-right</property>
			<value>0</value>
		</set>
		<set>
			<property>/controls/engines/engine[0]/propeller-pitch</property>
			<value>1</value>
		</set>
		<set>
			<property>/engines/engine[0]/running</property>
			<value>0</value>
		</set>
	</init>

	<step>
		<message>
		Switch on both magneto switches
		</message>
		<view>
			<heading-offset-deg>20.8</heading-offset-deg>
			<pitch-offset-deg>-33.1</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>0.0</x-offset-m>
			<y-offset-m>0.5</y-offset-m>
			<z-offset-m>3.9</z-offset-m>
			<field-of-view>44.3</field-of-view>
		</view>

		<marker>
			<x-m>3.3000</x-m>
			<y-m>-0.3036</y-m>
			<z-m>0.1000</z-m>
			<scale>2.9378</scale>
		</marker>

		<exit>
			<condition>
				<property>/controls/engines/engine[0]/mag-switch-left</property>
				<property>/controls/engines/engine[0]/mag-switch-right</property>
			</condition>
		</exit>
	</step>

	<step>
		<message>
		Open throttle to around 1/3rd
		</message>
		<marker>
			<x-m>3.4827</x-m>
			<y-m>-0.3036</y-m>
			<z-m>0.1000</z-m>
			<scale>4.4133</scale>
		</marker>

		<error>
			<message>Ensure the throttle is 1/3 open{|.}</message>
			<condition>
				<less-than>
					<property>/controls/engines/engine[0]/throttle</property>
					<value>0.3</value>
				</less-than>
			</condition>
		</error>
		<exit>
			<condition>
				<greater-than>
					<property>/controls/engines/engine[0]/throttle</property>
					<value>0.3</value>
				</greater-than>
			</condition>
		</exit>
	</step>

	<step>
		<message>Next, press and release the fuel primer button five times</message>
		<view>
			<heading-offset-deg>350.7</heading-offset-deg>
			<pitch-offset-deg>-41.9</pitch-offset-deg>
			<roll-offset-deg>0.0</roll-offset-deg>
			<x-offset-m>0.0</x-offset-m>
			<y-offset-m>0.5</y-offset-m>
			<z-offset-m>3.9</z-offset-m>
			<field-of-view>44.3</field-of-view>
		</view>

		<marker>
			<x-m>3.4249</x-m>
			<y-m>0.1187</y-m>
			<z-m>0.0858</z-m>
			<scale>2.3422</scale>
		</marker>

		<exit>
			<condition>
				<greater-than>
					<property>/controls/engines/engine[0]/primer</property>
					<value>4</value>
				</greater-than>
			</condition>
		</exit>
	</step>

	<step>
		<message>Finally, press and hold the starter button until the engine is running</message>
		<marker>
			<x-m>3.4249</x-m>
			<y-m>0.0884</y-m>
			<z-m>0.1751</z-m>
			<scale>-1.6578</scale>
		</marker>

		<exit>
			<condition>
				<property>/engines/engine[0]/running</property>
			</condition>
		</exit>
	</step>

	<step>
		<message>Throttle back to avoid tipping the aircraft onto its nose</message>
		<exit>
			<condition>
				<less-than>
					<property>/controls/engines/engine[0]/throttle</property>
					<value>0.2</value>
				</less-than>
			</condition>
		</exit>
	</step>

	<end>
		<message>The engine should now be running</message>
		<view>
			<heading-offset-deg>0</heading-offset-deg>
			<pitch-offset-deg>-12</pitch-offset-deg>
			<field-of-view>55</field-of-view>
		</view>
	</end>
</PropertyList>
