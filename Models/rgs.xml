<?xml version="1.0"?>
  <PropertyList> 
    <path>rgs.ac</path>
    <animation> 
      <type>select</type>
      <object-name>back</object-name>
      <condition> 
        <not> 
          <equals> 
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </not>
      </condition>
    </animation>

    <animation> 
      <type>blend</type>
      <object-name>glass</object-name>
      <offset>0.75</offset>
    </animation>

    <animation> 
      <type>select</type>
      <object-name>disk</object-name>
      <condition> 
        <and> 
          <equals> 
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
          <property>/controls/switches/gun-sight-main</property>
        </and>
      </condition>
    </animation>
	
    <animation> 
      <type>material</type>
      <object-name>disk</object-name>
      <transparency>
        <alpha-prop>controls/switches/gun-sight-dimmer</alpha-prop>
        <factor>-1</factor>
        <offset>1</offset>
      </transparency>
    </animation>
	
  </PropertyList>
