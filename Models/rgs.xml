<?xml version="1.0"?>
  <PropertyList> 
    <path>rgs.ac</path>
    <animation> 
      <type>select</type>
      <object-name>back</object-name>
      <condition> 
        <not> 
          <equals> 
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </not>
      </condition>
    </animation>
	<!-- removwed while blend is broken 
    <animation> 
      <type>blend</type>
      <object-name>glass</object-name>
      <offset>0.75</offset>
    </animation>
	-->
    <animation> 
      <type>select</type>
      <object-name>disk</object-name>
      <condition> 
        <and> 
          <equals> 
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
		  <equals> 
            <property>/controls/switches/gun-sight-main</property>
            <value>1</value>
          </equals>
        </and>
      </condition>
    </animation>
	
