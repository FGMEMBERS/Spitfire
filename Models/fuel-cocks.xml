<?xml version="1.0"?>
<PropertyList>
	<path>fuel-cocks.ac</path>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>pick-left-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.openCock(1,1);
				</script>
			</binding>
      <binding>
        <command>property-interpolate</command>
        <property>controls/engines/engine/fuel-cock/lever-norm[1]</property>
        <property>consumables/fuel/tank[1]/selected</property>
        <time>2.0</time>
      </binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>pick-left-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.openCock(1,0);
				</script>
			</binding>
      <binding>
        <command>property-interpolate</command>
        <property>controls/engines/engine/fuel-cock/lever-norm[1]</property>
        <property>consumables/fuel/tank[1]/selected</property>
        <time>2.0</time>
      </binding>
    </action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>pick-right-up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.openCock(0,1);
				</script>
			</binding>
      <binding>
        <command>property-interpolate</command>
        <property>controls/engines/engine/fuel-cock/lever-norm[0]</property>
        <property>consumables/fuel/tank[0]/selected</property>
        <time>2.0</time>
      </binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>pick-right-down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.openCock(0,0);
				</script>
			</binding>
      <binding>
        <command>property-interpolate</command>
        <property>controls/engines/engine/fuel-cock/lever-norm[0]</property>
        <property>consumables/fuel/tank[0]/selected</property>
        <time>2.0</time>
      </binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>lever-upper</object-name>
		<!--<property>consumables/fuel/tank[0]/selected</property>-->
    <property>controls/engines/engine/fuel-cock/lever-norm[0]</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>-30</dep>
			</entry>
      <entry>
        <ind>0.5</ind>
        <dep>0</dep>
      </entry>
			<entry>
				<ind>1.0</ind>
				<dep>30</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>-0.0491104</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>lever-lower</object-name>
		<!--<property>consumables/fuel/tank[1]/selected</property>-->
    <property>controls/engines/engine/fuel-cock/lever-norm[1]</property>
    <interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>-30</dep>
			</entry>
      <entry>
        <ind>0.5</ind>
        <dep>0</dep>
      </entry>
			<entry>
				<ind>1.0</ind>
				<dep>30</dep>
			</entry>
		</interpolation>
		<center>
			<x-m>-0.0491104</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
</PropertyList>
