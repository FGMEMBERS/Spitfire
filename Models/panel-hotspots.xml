            <!-- clock hotspots -->
            <action> 
              <name>adjust left fine</name>
              <button>0</button>
              <x>-420</x>
              <y>-80</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <step>-60</step>
                <min>0</min>
                <max>43200</max>
                <wrap>true</wrap>
              </binding>
            </action>
            <action> 
              <name>adjust left coarse</name>
              <button>1</button>
              <x>-420</x>
