            <!-- magneto switch hotspots -->
            <action> 
              <name>switch up left</name>
              <button>0</button>
              <x>-435</x>
              <y>-220</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setleftMagswitch(1);
				</script>
              </binding>
            </action>
            <action> 
              <name>switch down left</name>
              <button>0</button>
              <x>-435</x>
              <y>-300</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setleftMagswitch(0);
			  </script>
              </binding>
            </action>
            <action> 
              <name>switch up right</name>
              <button>0</button>
              <x>-405</x>
              <y>-220</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setrightMagswitch(1);
			    </script>
              </binding>
