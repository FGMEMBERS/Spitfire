            <action> 
              <name>primer pump</name>
              <button>0</button>
              <x>185</x>
              <y>-510</y>
              <w>40</w>
              <h>100</h>
              <repeatable type="bool">false</repeatable>
              <binding> 
                <command>nasal</command>
