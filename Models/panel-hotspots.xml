            <!-- altimeter hotspots -->
            <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-150</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-0.01</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate coarse</name>
              <button>1</button>
              <x>-150</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-0.1</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-130</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
