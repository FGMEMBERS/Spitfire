            <!-- flaps  -->
            <action> 
              <name>extend</name>
              <button>0</button>
              <x>-255</x>
              <y>140</y>
              <w>25</w>
              <h>75</h>
              <binding> 
                <command>nasal</command>
                <script>spitfire.flapLever(1)</script>
              </binding>
            </action>
            <action> 
              <name>retract</name>
              <button>0</button>
              <x>-255</x>
              <y>215</y>
              <w>25</w>
              <h>75</h>
              <binding> 
                <command>nasal</command>
                <script>spitfire.flapLever(0)</script>
              </binding>
            </action>
            <!-- starter cartridge indexer ring-pull -->
            <action> 
              <name>ring-pull</name>
              <button>0</button>
              <x>400</x>
              <y>-300</y>
              <w>65</w>
              <h>130</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.indexCof(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.indexCof(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
            <!-- starter push -->
            <action> 
              <name>starter push</name>
              <button>0</button>
              <x>130</x>
              <y>-280</y>
              <w>35</w>
              <h>50</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.startCof(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.startCof(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
            <!-- cut-off ring-pull -->
            <action> 
              <name>cut-off</name>
              <button>0</button>
              <x>260</x>
              <y>-545</y>
              <w>50</w>
              <h>135</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.pullCutoff(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.pullCutoff(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
            <!-- fuel gauge push -->
            <action> 
              <name>push to read fuel</name>
              <button>0</button>
              <x>260</x>
              <y>-270</y>
              <w>35</w>
              <h>50</h>
              <binding> 
                <command>property-assign</command>
                <property>/controls/switches/fuel-gauge</property>
                <value type="bool">1</value>
              </binding>
              <mod-up> 
                <binding> 
                  <command>property-assign</command>
                  <property>/controls/switches/fuel-gauge</property>
                  <value type="bool">0</value>
                </binding>
              </mod-up>
            </action>
