            <!-- altimeter hotspots -->
            <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-150</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-0.01</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate coarse</name>
              <button>1</button>
              <x>-150</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>-0.1</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate fine</name>
              <button>0</button>
              <x>-130</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>0.01</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <action> 
              <name>calibrate coarse</name>
              <button>1</button>
              <x>-130</x>
              <y>-140</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <step>0.1</step>
                <min>26.0</min>
                <max>33.0</max>
                <wrap>false</wrap>
              </binding>
            </action>
            <!-- magneto switch hotspots -->
            <action> 
              <name>switch up left</name>
              <button>0</button>
              <x>-435</x>
              <y>-220</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setleftMagswitch(0);
				</script>
              </binding>
            </action>
            <action> 
              <name>switch down left</name>
              <button>0</button>
              <x>-435</x>
              <y>-300</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setleftMagswitch(1);
			  </script>
              </binding>
            </action>
            <action> 
              <name>switch up right</name>
              <button>0</button>
              <x>-405</x>
              <y>-220</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setrightMagswitch(0);
			    </script>
              </binding>
            </action>
            <action> 
              <name>switch down right</name>
              <button>0</button>
              <x>-405</x>
              <y>-300</y>
              <w>20</w>
              <h>80</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.setrightMagswitch(1);
				</script>
              </binding>
            </action>
            <!-- clock hotspots -->
            <action> 
              <name>adjust left fine</name>
              <button>0</button>
              <x>-420</x>
              <y>-80</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <step>-60</step>
                <min>0</min>
                <max>43200</max>
                <wrap>true</wrap>
              </binding>
            </action>
            <action> 
              <name>adjust left coarse</name>
              <button>1</button>
              <x>-420</x>
              <y>-80</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <step>-900</step>
                <min>0</min>
                <max>43200</max>
                <wrap>1</wrap>
              </binding>
            </action>
            <action> 
              <name>adjust right fine</name>
              <button>0</button>
              <x>-400</x>
              <y>-80</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <step>60</step>
                <min>0</min>
                <max>43200</max>
                <wrap>true</wrap>
              </binding>
            </action>
            <action> 
              <name>adjust right coarse</name>
              <button>1</button>
              <x>-400</x>
              <y>-80</y>
              <w>20</w>
              <h>30</h>
              <binding> 
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <step>900</step>
                <min>0</min>
                <max>43200</max>
                <wrap>1</wrap>
              </binding>
            </action>
            <!-- flaps  -->
            <action> 
              <name>extend</name>
              <button>0</button>
              <x>-255</x>
              <y>140</y>
              <w>25</w>
              <h>75</h>
              <binding> 
                <command>nasal</command>
                <script>controls.stepFlaps(1)</script>
              </binding>
            </action>
            <action> 
              <name>retract</name>
              <button>0</button>
              <x>-255</x>
              <y>215</y>
              <w>25</w>
              <h>75</h>
              <binding> 
                <command>nasal</command>
                <script>controls.stepFlaps(-1)</script>
              </binding>
            </action>
            <!-- starter cartridge indexer ring-pull -->
            <action> 
              <name>ring-pull</name>
              <button>0</button>
              <x>395</x>
              <y>-225</y>
              <w>50</w>
              <h>50</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.indexCof(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.indexCof(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
			<!-- starter push -->
            <action> 
              <name>starter push</name>
              <button>0</button>
              <x>190</x>
              <y>-275</y>
              <w>50</w>
              <h>50</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.startCof(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.startCof(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
			<!-- cut-off ring-pull -->
            <action> 
              <name>cut-off</name>
              <button>0</button>
              <x>255</x>
              <y>-450</y>
              <w>75</w>
              <h>75</h>
              <binding> 
                <command>nasal</command>
                <script>
				spitfire.pullCutoff(1);
				</script>
              </binding>
              <mod-up> 
                <binding> 
                  <command>nasal</command>
                  <script>
				  spitfire.pullCutoff(0);
				
				</script>
                </binding>
              </mod-up>
            </action>
          </actions>
        </instrument>
      </instruments>
    </PropertyList>
  