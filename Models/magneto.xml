<?xml version="1.0"?>
<PropertyList>
	<path>magneto.ac</path>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Up-Left</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.setleftMagswitch(1);
				</script>
			</binding>		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Down-Left</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.setleftMagswitch(0);
				</script>
			</binding>		</action>
	</animation>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Up-Right</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.setrightMagswitch(1);
				</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Down-Right</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.setrightMagswitch(0);
				</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Switch-L</object-name>
		<property>controls/engines/engine/mag-switch-left</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-25</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>25</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>Switch-R</object-name>
		<property>controls/engines/engine/mag-switch-right</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-25</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>25</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>
	
	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
