<?xml version="1.0"?>
<PropertyList>

	<path>primer.ac</path>

	<animation>
		<type>pick</type>
		<visible>true</visible>
		<object-name>pump</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					spitfire.pumpPrimer(1);
				</script>
			</binding>
			<mod-up>
				<binding>
					<command>nasal</command>
					<script>
						spitfire.pumpPrimer(0);
					</script>
				</binding>
			</mod-up>
		</action>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>pump</object-name>
		<property>controls/engines/engine/primer-pump</property>
		<factor>0.01</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
