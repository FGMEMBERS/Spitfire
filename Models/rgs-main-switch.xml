<?xml version="1.0"?>
<PropertyList>
	<path>rgs-main-switch.ac</path>

	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Up</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>/controls/switches/gun-sight-main</property>
				<value type="bool">1</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<visible>false</visible>
		<object-name>Pick-Down</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>/controls/switches/gun-sight-main</property>
				<value type="bool">0</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Switch</object-name>
		<property>/controls/switches/gun-sight-main</property>
		<interpolation>
			<entry>
				<ind>0</ind>
				<dep>-25</dep>
			</entry>
			<entry>
				<ind>1</ind>
				<dep>25</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- *** LoD *** -->
	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>
</PropertyList>
