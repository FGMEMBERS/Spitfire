<?xml version="1.0"?>
  <PropertyList> 
    <path>rgs-main-switch.ac</path>
    <animation> 
      <type>rotate</type>
      <object-name>Switch</object-name>
      <property>controls/switches/gun-sight-main</property>
      <interpolation> 
        <entry> 
          <ind>0</ind>
          <dep>-25</dep>
        </entry>
        <entry> 
          <ind>1</ind>
          <dep>25</dep>
        </entry>
      </interpolation>
      <axis> 
        <x>0</x>
        <y>-1</y>
        <z>0</z>
      </axis>
    </animation>
    
    <!-- *** LoD *** -->
    <animation> 
      <type>range</type>
      <min-m>0</min-m>
      <max-m>5</max-m>
    </animation>
  </PropertyList>
