      <rumble> 
        <name>rumble</name>
        <mode>looped</mode>
        <path>Sounds/rumble.wav</path>
        <condition> 
          <or> 
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </or>
        </condition>
        <volume> 
          <property>/velocities/airspeed-kt</property>
          <type>log</type>
          <factor>0.25</factor>
        </volume>
      </rumble>
      <gear> 
        <name>gear</name>
        <mode>in-transit</mode>
        <path>Aircraft/Spitfire/Sounds/gear.wav</path>
        <property>/gear/gear[0]/position-norm</property>
      </gear>
      <gear> 
        <name>gear-lock</name>
        <path>Sounds/gear-lck.wav</path>
        <condition> 
          <greather-than> 
            <property>/gear/gear[0]/position-norm</property>
            <value>0.9</value>
          </greather-than>
        </condition>
      </gear>
      <squeal> 
        <name>squeal</name>
        <path>Sounds/squeal.wav</path>
        <condition> 
          <or> 
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </or>
        </condition>
        <volume> 
          <property>/velocities/speed-down-fps</property>
          <factor>0.5</factor>
          <max>1.0</max>
        </volume>
        <volume> 
          <property>/velocities/airspeed-kt</property>
          <factor>0.01</factor>
          <max>1.0</max>
        </volume>
        <volume> 
          <internal>dt_stop</internal>
          <factor>0.05</factor>
          <max>1.0</max>
        </volume>
        <pitch> 
          <property>/velocities/airspeed-kt</property>
          <factor>0.0025</factor>
          <offset>1.2</offset>
        </pitch>
      </squeal>
      
      <wind> 
        <name>wind</name>
        <mode>looped</mode>
        <path>Sounds/wind.wav</path>
        <property>/velocities/airspeed-kt</property>
        <volume> 
          <property>/position/altitude-ft</property>
          <factor>-0.000015</factor>
          <offset>1.0</offset>
          <min>0.1</min>
          <max>1.0</max>
        </volume>
        <volume> 
          <property>/velocities/airspeed-kt</property>
          <factor>0.0015</factor>
          <min>0.03</min>
          <max>0.25</max>
        </volume>
        <pitch> 
          <property>/velocities/airspeed-kt</property>
          <factor>0.01</factor>
          <offset>1.25</offset>
        </pitch>
      </wind>
      <flap> 
        <name>flaps</name>
        <mode>in-transit</mode>
        <path>Aircraft/Spitfire/Sounds/flaps.wav</path>
        <property>/surface-positions/flap-pos-norm</property>
        <volume> 
          <factor>1</factor>
        </volume>
      </flap>
      <stall> 
        <name>gear warn</name>
        <mode>looped</mode>
        <path>Sounds/gear-hrn.wav</path>
        <condition> 
          <and> 
            <equals> 
              <property>controls/engines/engine/throttle</property>
              <value>0</value>
            </equals>
            <equals> 
              <property>controls/gear/gear-down</property>
              <value>0</value>
            </equals>
            <equals> 
              <property>controls/gear/gear-warn</property>
              <value>0</value>
            </equals>
          </and>
        </condition>
        <volume> 
          <max>1.0</max>
        </volume>
      </stall>
      <!-- no binding yet?
  <click>
   <name>click</name>
   <path>Sounds/click.wav</path>
  </click>
-->
    </fx>
  </PropertyList>
