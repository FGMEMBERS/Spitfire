      <engine> 
        <name>engine</name>
        <mode>looped</mode>
        <path>Aircraft/Spitfire/Sounds/merlin_rpm1_1.wav</path>
        <!--  	 <path>Aircraft/p51d/Sounds/p51d_rpm1.wav</path>-->
        <condition> 
          <and> 
            <property>/engines/engine/running</property>
            <less-than> 
              <property>/engines/engine/rpm</property>
              <value>2500</value>
            </less-than>
          </and>
        </condition>
        <volume> 
          <property>/engines/engine/rpm</property>
          <factor>0.001</factor>
          <min>0.50</min>
          <max>1.0</max>
          <offset>0.15</offset>
        </volume>
        <pitch> 
          <property>/engines/engine/rpm</property>
          <factor>0.0012</factor>
          <min>0.1</min>
          <max>6.0</max>
        </pitch>
      </engine>
      <engine> 
        <name>engine2</name>
        <mode>looped</mode>
        <path>Aircraft/Spitfire/Sounds/merlin_rpm4_1.wav</path>
        <!--	 <path>Aircraft/p51d/Sounds/p51d_rpm1.wav</path>-->
        <condition> 
          <and> 
            <property>/engines/engine/running</property>
            <greater-than> 
              <property>/engines/engine/rpm</property>
              <value>2500</value>
            </greater-than>
          </and>
        </condition>
        <volume> 
          <property>/engines/engine/rpm</property>
          <factor>0.001</factor>
          <min>0.50</min>
          <max>2.00</max>
          <offset>0.15</offset>
        </volume>
        <pitch> 
          <property>/engines/engine/rpm</property>
          <factor>0.00012</factor>
          <min>0.5</min>
          <max>1.0</max>
        </pitch>
      </engine>
